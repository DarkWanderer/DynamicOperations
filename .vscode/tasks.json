{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "dependsOn": [
                "Build Extension"
            ],
            "label": "HEMTT Build",
            "type": "shell",
            "command": "${workspaceFolder}/hemtt",
            "args": [
                "build"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "HEMTT Release",
            "type": "shell",
            "command": "${workspaceFolder}/hemtt",
            "args": [
                "build",
                "--release",
                "--force-release"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [],
            "group": "build"
        },
        {
            "label": "Build Extension",
            "args": [
                "build",
                "-v"
            ],
            "command": "cargo",
            "group": "build",
            "options": {
                "cwd": "${workspaceFolder}/extensions/dynops"
            },
            "problemMatcher": [
                {
                    "owner": "rust",
                    "fileLocation": [
                        "relative",
                        "${workspaceRoot}"
                    ],
                    "pattern": {
                        "regexp": "^(.*):(\\d+):(\\d+):\\s+(\\d+):(\\d+)\\s+(warning|error):\\s+(.*)$",
                        "file": 1,
                        "line": 2,
                        "column": 3,
                        "endLine": 4,
                        "endColumn": 5,
                        "severity": 6,
                        "message": 7
                    }
                }
            ]
        },
        {
            "label": "Populate CfgFunctions",
            "command": "${workspaceFolder}/scripts/PopulateCfgFunctions.ps1",
            "type": "shell",
            "args": [
                "-Directory",
                "${workspaceFolder}\\addons"
            ],
            "options": {
                "shell": {
                    "executable": "C:\\Windows\\System32\\WindowsPowerShell\\v1.0\\powershell.exe",
                    "args": [
                        "-NoProfile",
                        "-ExecutionPolicy",
                        "Bypass",
                        "-Command"
                    ]
                }
            },
            "group": "none",
            "problemMatcher": [],
        },
    ]
}
